<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="0.5"
        android:pivotY="0.5"
        android:duration="500"
        />
    <translate
        android:fromXDelta="100%"
        android:fromYDelta="0"
        android:toXDelta="0"
        android:toYDelta="0"
        android:duration="500"
        />
    <alpha
        android:duration="500"
        android:fromAlpha="0"
        android:toAlpha="1" />

</set>